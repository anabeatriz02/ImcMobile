<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="36dp"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:src="@drawable/imc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMC"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seu peso"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:padding="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/homi"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sua altura"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/homi"
                android:drawablePadding="16dp"
                android:drawableTint="@android:color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calcular"
                android:layout_marginBottom="16dp"
                android:background="@drawable/buttom_background"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/resultado_background"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="0.0"
                android:textSize="48dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text= "Peso Ideal"
                android:textSize="24dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>